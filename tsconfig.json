{
	"extends": "astro/tsconfigs/strict",
	"include": [
		".astro/types.d.ts",
		".astro/types.d.ts",
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*",
		"**/*"
	],
	"exclude": ["dist", "node_modules"],
	"compilerOptions": {
		"strict": true,
		"verbatimModuleSyntax": true,
		"target": "esnext",
		"module": "esnext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["src/assets/*"],
			"@ui/*": ["src/ui/*"],
			"@styles/*": ["src/styles/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	}
}
