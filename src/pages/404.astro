---
import SimpleLayout from '../layouts/SimpleLayout.astro';
---
<SimpleLayout>
  <div class="flex flex-col items-center justify-center text-center gap-6 mx-auto">
    <div class="text-7xl font-extrabold text-blue-600 dark:text-blue-400">404</div>
    <div class="text-2xl font-semibold text-gray-800 dark:text-gray-100">Page Not Found</div>
    <div class="text-gray-600 dark:text-gray-200 mb-4">Sorry, the page you are looking for does not exist.</div>
    <a href="/" class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white font-semibold rounded px-4 py-2 transition-colors">Home</a>
  </div>
</SimpleLayout> 
